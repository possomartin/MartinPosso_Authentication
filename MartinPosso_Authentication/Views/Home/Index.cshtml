<div class="products-table">
    @using (Html.BeginForm())
    {
        @Html.TextBox("searchString")
        <input type="submit" name="submit" value="Search" style="background: #3CB19E;
            color: #fff;
            margin: 30px;" />
    }
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Supplier.SupplierName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
            </tr>
        }
    </table>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Get to now us</h2>
        <a class="fa fa-twitter" href="https://twitter.com" target="_blank"></a>
    </div>
    <div class="col-md-4">
        <h2>Shared moments with us</h2>
        <a class="fa fa-instagram" href="https://instagram.com" target="_blank"></a>
    </div>
    <div class="col-md-4">
        <h2>Discuss with us</h2>
        <a class="fa fa-facebook" href="https://facebook.com" target="_blank"></a>
    </div>
</div>
