@model IEnumerable<MartinPosso_Authentication.Models.Product>

@{
    ViewBag.Title = "Home Page";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style type="text/css">
    img {
        margin: 30px;
    }

    .jumbotron {
        background: #454545;
        box-shadow: 10px 10px 20px;
        border-radius: 40px;
        color: #757575;
    }

    .fa {
        width: 128px;
        height: 128px;
        border-radius: 50%;
    }

    .fa-facebook {
        width: 128px;
        height: 128px;
        color: #3B5998;
    }

    .fa-instagram {
        color: red;
    }

    .col-md-4 {
        text-align: center;
    }

    .products-table
    {
        justify-content:center;
        box-shadow: #454545 10px 10px 20px;
        padding: 40px;
        border-radius: 30px;
    }

    .row {
        margin: 50px;
        border-radius: 30px;
        box-shadow: #454545 10px 10px 20px;
    }
</style>

